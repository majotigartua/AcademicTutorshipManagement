<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="960.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="academictutorshipmanagement.views.LoginFXMLController">
   <children>
      <ImageView fitHeight="622.0" fitWidth="509.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../utilities/images/FEI.png" />
         </image>
      </ImageView>
      <Label layoutX="554.0" layoutY="63.0" prefHeight="120.0" prefWidth="350.0" text="Bienvenido/a al Sistema para la Gestión de Tutorías Académicas" textAlignment="CENTER" wrapText="true">
         <font>
            <Font name="Arial" size="32.0" />
         </font>
      </Label>
      <Label layoutX="545.0" layoutY="225.0" prefHeight="40.0" prefWidth="350.0" text="Ingrese su nombre de usuario y contraseña, y dé clic en el botón de &quot;Aceptar&quot;." wrapText="true">
         <font>
            <Font name="Arial" size="14.0" />
         </font>
      </Label>
      <Label layoutX="545.0" layoutY="295.0" prefHeight="20.0" prefWidth="150.0" text="Nombre de usuario:" wrapText="true">
         <font>
            <Font name="Arial" size="14.0" />
         </font>
      </Label>
      <TextField fx:id="usernameTextField" layoutX="545.0" layoutY="335.0" prefHeight="20.0" prefWidth="350.0">
