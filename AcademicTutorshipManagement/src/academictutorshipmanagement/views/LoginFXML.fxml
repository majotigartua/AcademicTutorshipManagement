            <Font name="Arial" size="14.0" />
         </font>
      </TextField>
      <Label layoutX="545.0" layoutY="385.0" prefHeight="20.0" prefWidth="200.0" text="Contraseña:" wrapText="true">
         <font>
            <Font name="Arial" size="14.0" />
         </font>
      </Label>
      <PasswordField fx:id="passwordField" layoutX="544.0" layoutY="423.0" prefHeight="26.0" prefWidth="350.0">
         <font>
            <Font name="Arial" size="14.0" />
         </font>
      </PasswordField>
      <Button layoutX="645.0" layoutY="490.0" mnemonicParsing="false" onAction="#logInButtonClick" prefHeight="20.0" prefWidth="150.0" text="Iniciar sesión">
         <font>
            <Font name="Arial" size="14.0" />
         </font>
      </Button>
      <Label layoutX="645.0" layoutY="545.0" onMouseClicked="#forgottenPasswordOnMouseClicked" prefHeight="29.0" prefWidth="150.0" text="¿Olvidó su contraseña?" textFill="#0500ff">
         <font>
            <Font name="Arial" size="14.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
